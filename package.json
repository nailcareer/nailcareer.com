{
	"private": true,
	"name": "nailcareer.com",
	"version": "0.2.0-dev.0",
	"description": "nailcareer website",
	"license": "UNLICENSED",
	"scripts": {
		"build": "run-s clean && run-p compile-tsc compile-sass importmap assets compile-pug && run-p compile-bundle",
		"clean": "rimraf x && mkdirp x x/assets/images",
		"importmap": "importly < package.json > x/importmap.json",
		"importmap-debug": "importly --host=node_modules < package.json > x/importmap.json && sed -i 's/\\/node_modules/\\/\\/localhost:4999/g' x/importmap.json",
		"compile-tsc": "tsc",
		"compile-pug": "pug -o x web -O '{\"debug\": false}'",
		"compile-pug-debug": "pug -o x web -O '{\"debug\": true}'",
		"compile-sass": "sass web/:x/",
		"compile-bundle": "rollup --silent --sourcemap -p rollup-plugin-sizes -p @rollup/plugin-node-resolve -f iife -i x/main.js -o x/main.bundle.js && terser x/main.bundle.js --source-map --comments false -o x/main.bundle.min.js",
		"import-new-images": "jpegger --indir assets/images-to-import --outdir assets/images --quality 80 --size 1200",
		"assets": "run-s assets-copy && run-p images-small images-medium",
		"assets-copy": "cp -R assets/images x/assets/images",
		"images-small": "jpegger --indir assets/images --outdir x/assets/images-small --size 600",
		"images-medium": "jpegger --indir assets/images --outdir x/assets/images-medium --size 1200",
		"images-large": "jpegger --indir assets/images --outdir x/assets/images-large --size 2000",
		"images-full": "jpegger --indir assets/images --outdir x/assets/images-full",
		"watch": "run-s importmap-debug && run-p watch-tsc watch-pug watch-sass",
		"watch-tsc": "npm run compile-tsc -s -- --watch",
		"watch-pug": "npm run compile-pug-debug -s -- --watch",
		"watch-sass": "npm run compile-sass -s -- --watch",
		"start": "run-p start-x start-node_modules",
		"start-x": "serve x -l 5000",
		"start-node_modules": "serve node_modules --cors -l 4999",
		"test": "exit 0"
	},
	"devDependencies": {
		"@rollup/plugin-node-resolve": "^13.0.4",
		"importly": "0.1.0-dev.0",
		"jpegger": "^0.1.2",
		"mkdirp": "^1.0.4",
		"npm-run-all": "^4.1.5",
		"pug-cli": "^1.0.0-alpha6",
		"rimraf": "^3.0.2",
		"rollup": "^2.56.1",
		"rollup-plugin-sizes": "^1.0.4",
		"sass": "^1.37.5",
		"serve": "^12.0.0",
		"terser": "^5.7.1",
		"typescript": "^4.2.3"
	},
	"dependencies": {
		"carouse": "0.0.1",
		"commotion": "0.1.0-dev.0",
		"crnc": "0.0.0-dev.22",
		"es-module-shims": "^0.12.2",
		"lit-element": "^2.4.0",
		"lit-html": "^1.3.0",
		"menutown": "0.0.1",
		"redcrypto": "0.0.0-dev.9",
		"renraku": "0.0.0-dev.40",
		"shopify-buy": "^2.11.0",
		"shopper": "0.2.0-dev.9",
		"sorry-not-sorry": "0.0.3",
		"xiome": "0.0.0"
	},
	"author": "Chase Moskal <chasemoskal@gmail.com>"
}
