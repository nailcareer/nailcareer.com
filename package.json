{
	"private": true,
	"name": "nailcareer.com",
	"version": "0.2.45",
	"description": "nailcareer website",
	"license": "UNLICENSED",
	"scripts": {
		"build": "run-s clean copy-metafiles verifications && run-p compile-tsc compile-sass importmap assets compile-pug && run-p compile-bundle",
		"clean": "rimraf x && mkdirp x x/assets/images",
		"verifications": "cp web/verifications/facebook/* x",
		"copy-metafiles": "cp CNAME .nojekyll x/",
		"importmap": "importly < package-lock.json > x/importmap.json",
		"compile-tsc": "tsc",
		"compile-pug": "pug -o x web -O '{\"debug\": false}'",
		"compile-pug-debug": "pug -o x web -O '{\"debug\": true}'",
		"compile-sass": "sass web/:x/",
		"compile-bundle": "rollup --silent --sourcemap -p rollup-plugin-sizes -p @rollup/plugin-node-resolve -f iife -i x/main.js -o x/main.bundle.js && terser x/main.bundle.js --source-map --comments false -o x/main.bundle.min.js",
		"import-new-images": "jpegger --indir assets/images-to-import --outdir assets/images --quality 80 --size 2000",
		"assets": "run-s copy-assets && run-p images-small images-medium",
		"copy-assets": "cp -R assets/images x/assets",
		"symlink-modules": "rm -rf x/node_modules && ln -s $(realpath node_modules) x/node_modules",
		"images-small": "jpegger --indir assets/images --outdir x/assets/images-small --size 600",
		"images-medium": "jpegger --indir assets/images --outdir x/assets/images-medium --size 1200",
		"images-large": "jpegger --indir assets/images --outdir x/assets/images-large --size 2000",
		"images-full": "jpegger --indir assets/images --outdir x/assets/images-full",
		"watch": "run-p importmap symlink-modules && run-p watch-tsc watch-pug watch-sass",
		"watch-tsc": "npm run compile-tsc -s -- --watch",
		"watch-pug": "npm run compile-pug-debug -s -- --watch",
		"watch-sass": "npm run compile-sass -s -- --watch",
		"start": "http-server -p 5000 x",
		"test": "exit 0"
	},
	"devDependencies": {
		"@rollup/plugin-node-resolve": "^13.1.2",
		"http-server": "^14.0.0",
		"importly": "^0.1.0",
		"jpegger": "^0.1.3",
		"mkdirp": "^1.0.4",
		"npm-run-all": "^4.1.5",
		"pug-cli": "1.0.0-alpha6",
		"rimraf": "^3.0.2",
		"rollup": "^2.62.0",
		"rollup-plugin-sizes": "^1.0.4",
		"sass": "^1.45.2",
		"serve": "^13.0.2",
		"terser": "^5.10.0",
		"typescript": "^4.5.4"
	},
	"dependencies": {
		"carouse": "0.0.1",
		"es-module-shims": "^1.4.1",
		"lit-element": "^3.0.2",
		"lit-html": "^2.0.2",
		"menutown": "0.0.1",
		"shopper": "0.2.0-dev.11",
		"sorry-not-sorry": "0.0.3",
		"xiome": "^0.0.18"
	},
	"author": "Chase Moskal <chasemoskal@gmail.com>"
}
