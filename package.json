{
	"private": true,
	"name": "nailcareer.com",
	"version": "0.2.91",
	"description": "nailcareer website",
	"license": "UNLICENSED",
	"type": "module",
	"scripts": {
		"build": "run-s clean link-node_modules link-s verifications && run-p compile-tsc compile-sass importmap assets && run-p compile-bundle && run-p compile-website-production",
		"clean": "rimraf x && mkdirp x x/assets/images",
		"verifications": "cp s/website/verifications/facebook/* x && cp s/website/verifications/pinterest/* x",
		"link-s": "ln -s $(realpath s) x/s",
		"link-xiome": "rm -rf node_modules/xiome && ln -s $(realpath ../xiome) node_modules/xiome",
		"link-node_modules": "ln -s $(realpath node_modules) x/node_modules",
		"link-assets": "rm -rf x/assets/graphics && ln -s $(realpath assets/graphics) x/assets/graphics",
		"importmap": "importly < package-lock.json > x/importmap.json",
		"compile-tsc": "tsc",
		"compile-website-debug": "node x/website/build.js debug",
		"compile-website-production": "node x/website/build.js production",
		"compile-sass": "sass s/website/styles/:x/",
		"compile-bundle": "rollup --silent --sourcemap -p rollup-plugin-sizes -p @rollup/plugin-node-resolve -f iife -i x/main.js -o x/main.bundle.js && terser x/main.bundle.js --source-map --comments false -o x/main.bundle.min.js",
		"import-new-images": "jpegger --indir assets/images-to-import --outdir assets/images --quality 90 --size 2000",
		"assets": "run-s copy-assets && run-p images-small images-medium images-large",
		"copy-assets": "cp -R assets/images x/assets && cp -R assets/graphics x/assets",
		"images-small": "jpegger --indir assets/images --outdir x/assets/images-small --quality 50 --size 600",
		"images-medium": "jpegger --indir assets/images --outdir x/assets/images-medium --quality 65 --size 1200",
		"images-large": "jpegger --indir assets/images --outdir x/assets/images-large --quality 90 --size 2000",
		"images-full": "jpegger --indir assets/images --outdir x/assets/images-full",
		"watch": "run-s link-assets && run-p watch-tsc watch-website watch-sass",
		"watch-tsc": "npm run compile-tsc -s -- --watch",
		"watch-website": "chokidar \"x/website/**/*\" \"s/website/*.yaml\" -c \"npm run compile-website-debug -s\"",
		"watch-sass": "npm run compile-sass -s -- --watch",
		"start": "http-server -p 5000 x",
		"test": "exit 0"
	},
	"devDependencies": {
		"@rollup/plugin-node-resolve": "^13.3.0",
		"chokidar-cli": "^3.0.0",
		"html-minifier-terser": "^7.0.0-beta.0",
		"http-server": "^14.1.1",
		"importly": "^0.2.0",
		"jpegger": "^0.1.3",
		"js-yaml": "^4.1.0",
		"mkdirp": "^1.0.4",
		"npm-run-all": "^4.1.5",
		"rimraf": "^3.0.2",
		"rollup": "^2.75.6",
		"rollup-plugin-sizes": "^1.0.4",
		"sass": "^1.52.3",
		"serve": "^13.0.2",
		"terser": "^5.14.1",
		"typescript": "^4.7.3"
	},
	"dependencies": {
		"@babel/polyfill": "^7.12.1",
		"@webcomponents/webcomponentsjs": "^2.6.0",
		"carouse": "0.0.1",
		"es-module-shims": "^1.5.6",
		"install": "^0.13.0",
		"lit-element": "^3.2.0",
		"lit-html": "^2.2.5",
		"markdown-it": "^13.0.1",
		"shopper": "^0.2.2",
		"sorry-not-sorry": "0.0.3",
		"whatwg-fetch": "^3.6.2",
		"xiome": "^0.0.32"
	},
	"author": "Chase Moskal <chasemoskal@gmail.com>"
}
